<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Span</th>
    <th>Priority</th>
    <th>Added at</th>
    <th>Completed at</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.title %></td>
    <td><%= task.span %></td>
    <td><%= task.priority %></td>
    <td><%= task.added_at %></td>
    <td><%= task.completed_at %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

