<% if blog_comment.admin %>
  <tr>
    <td><%= t("messages.blog_comment.admin") %></td>
    <td><%= l blog_comment.created_at %></td>
  </tr>
<% else %>
  <tr>
    <td>
      <% author = blog_comment.mixi_user? ? "mixi_user" : blog_comment.author %>
      <%= blog_comment.title %>
    </td>
    <td><%= author %></td>
  </tr>
  <tr>
    <td colspan="2"><%= to_br(blog_comment.content).html_safe %></td>
  </tr>
  <tr>
    <td><%= l blog_comment.created_at %></td>
    <td>
      <% if blog_comment.url.blank? then %>URL<% else %><%= link_to 'URL', blog_comment.url, :target => '_blank' %><% end %>
      | <% if blog_comment.mail.blank? then %>Mail<% else %><%= mail_to blog_comment.mail, 'Mail' %><% end %>
    </td>
  </tr>
  <tr>
    <td>
      <%#= link_to(t("actions.edit"), edit_blog_blog_comment_path(blog_id: blog_comment.blog_id, id: blog_comment)) %>
      <%#= link_to(t("actions.destroy"), delete_blog_blog_comment_path(blog_id: blog_comment.blog_id, id: blog_comment)) %>
    </td>
  </tr>
<% end %>
